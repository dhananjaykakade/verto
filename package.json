{
	"name": "quiz-backend",
	"version": "1.0.0",
	"main": "dist/server.js",
	"license": "MIT",
	"type": "module",
	"scripts": {
		 "dev": "tsx watch src/server.ts",
		"dev:ts": "ts-node-dev --respawn --transpile-only src/server.ts",
		"build": "tsc",
		"start": "node dist/server.js",
		"prisma:migrate": "prisma migrate dev --name init",
		"prisma:generate": "prisma generate",
		"test": "jest --runInBand --no-cache --config jest.config.cjs"
	},
	"dependencies": {
		"@prisma/client": "^6.16.3",
		"dotenv": "^17.2.3",
		"express": "^5.1.0",
		"http-status-codes": "^2.3.0",
		"pino": "^10.0.0",
		"pino-pretty": "^13.1.1",
		"zod": "^4.1.11"
	},
	"devDependencies": {
		"@types/express": "^5.0.3",
		"@types/http-status-codes": "^1.2.0",
		"@types/jest": "^30.0.0",
		"@types/node": "^24.6.2",
		"@types/supertest": "^6.0.3",
		"jest": "^30.2.0",
		"prisma": "^6.16.3",
		"supertest": "^7.1.4",
		"ts-jest": "^29.4.4",
		"ts-node-dev": "^2.0.0",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3"
	}
}
